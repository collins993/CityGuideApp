<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_move"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF1F2"
    android:orientation="vertical"
    tools:context=".Common.SplashScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="30dp"
            android:src="@drawable/right_background" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="30dp"
            android:src="@drawable/left_background" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/middle_background" />

        <TextView
            android:id="@+id/the_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/powered_by_line"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:padding="90dp"
            android:text="@string/the_guide"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/powered_by_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:padding="30dp"
            android:text="@string/powered_by"
            android:textColor="@color/black" />

    </RelativeLayout>


</LinearLayout>